<Window x:Class="WPFBalrial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBalrial"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Left" Width="200" Margin="5">
            <StackPanel DockPanel.Dock="Top" Height="100">
                <TextBlock Text="Usuario"/>
                <TextBox Name="tbUsuario"/>
                <TextBlock Text="Contraseña"/>
                <TextBox Name="tbPassword"/>                
            </StackPanel>
            <Grid>
            <StackPanel Width="200">
                    <Button Name="btUsuarios" FontSize="15" Content="Usuarios" Margin="5"/>
                    <Button Content="Entidades" FontSize="15" Margin="5"/>
                    <Button Content="Proyectos" FontSize="15" Margin="5"/>
                </StackPanel>
            </Grid>
        </DockPanel>

        <Frame Name="frmPrincipal" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
