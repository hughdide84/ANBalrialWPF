<Window x:Class="WPFBalrial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBalrial"
        mc:Ignorable="d"
        Title="BALRIAL APP" Height="450" Width="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Left" Width="150" Margin="5">
            <StackPanel Name="pnlLogin" DockPanel.Dock="Top" >
                <TextBlock Text="Usuario" Margin="2"/>
                <TextBox Name="tbUsuario" Margin="2"/>
                <TextBlock Text="Contraseña" Margin="2"/>
                <TextBox Name="tbPassword" Margin="2"/>
                <Button Name="btAcceder" FontSize="15" Content="Acceder" Height="25" Margin="5,20,5,0"/>
            </StackPanel>
            <Grid>
                <StackPanel Name="pnlMenu">
                    <Button Name="btUsuarios" FontSize="15" Content="Usuarios" Margin="5"/>
                    <Button Content="Entidades" FontSize="15" Margin="5"/>
                    <Button Content="Proyectos" FontSize="15" Margin="5"/>
                </StackPanel>
            </Grid>
        </DockPanel>

        <Frame Name="frmPrincipal" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
